<resources>
    <!-- FilterChip style for customizing chip appearance -->
    <style name="FilterChip">
        <!-- Chip Text Color -->

        <!-- Border color -->
        <item name="chipStrokeColor">@color/chip_stroke_color</item> <!-- Border color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Border width -->
        <item name="chipStrokeWidth">1dp</item> <!-- Border thickness -->

        <!-- Background color for the chip -->
        <item name="chipBackgroundColor">@color/chip_background_color</item> <!-- Default chip background -->

        <!-- Corner radius for chips -->
        <item name="chipCornerRadius">16dp</item> <!-- Rounded corners -->

        <!-- Icon visibility: false means no icon inside the chip -->
        <item name="chipIconVisible">false</item> <!-- No icon on the chip -->

        <!-- Customize text appearance within the chip -->
      <!-- Text Appearance for Chip -->

        <!-- Customize chip padding -->
        <item name="chipStartPadding">12dp</item> <!-- Left padding -->
        <item name="chipEndPadding">12dp</item> <!-- Right padding -->

    </style>

    <!-- Chip Text Appearance for consistent text styling -->
    <style name="ChipTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item> <!-- Text color -->
    </style>


    <!-- Light Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@android:color/black</item>

    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@android:color/black</item>






    </style>


        <!-- Gender Button Style -->
        <style name="GenderButton">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">80dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:textColor">@drawable/gender_text_selector</item>
            <item name="android:background">@drawable/gender_button_unselected</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- Input Section Layout -->
        <style name="InputSection">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
            <item name="android:layout_marginTop">16dp</item>
        </style>

        <!-- Label Text Style -->
        <style name="InputLabel">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#1C1F2A</item>
            <item name="android:textSize">14sp</item>
        </style>

        <!-- Value Text Style -->
        <style name="InputValue">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#1C1F2A</item>
            <item name="android:textSize">16sp</item>
            <item name="android:layout_marginTop">8dp</item>
        </style>

        <!-- Counter Box (Weight and Age) -->
        <style name="CounterBox">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">50dp</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:background">@drawable/input_box</item>
            <item name="android:gravity">center_vertical</item>
        </style>

        <!-- Counter Buttons -->
        <style name="CounterButton">
            <item name="android:layout_width">48dp</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:background">@android:color/white</item>
        </style>

        <!-- Counter EditText -->
        <style name="CounterInput">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_weight">1</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">#1C1F2A</item>
            <item name="android:textSize">18sp</item>
            <item name="android:background">@drawable/border</item>
        </style>


    <string name="difficulty_label">Difficulty: %1$s</string>
    <string name="target_label">Target: %1$s</string>
    <string name="muscle_groups_label">Muscle Groups: %1$s</string>
    <string name="safety_warning_label">Safety Warning: %1$s</string>
    <string name="reps_label">Reps: %1$s</string>
    <string name="no_description">No description available.</string>

</resources>
