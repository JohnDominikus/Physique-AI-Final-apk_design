<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================ -->
    <!-- PROFESSIONAL MODERN STYLE SYSTEM -->
    <!-- ============================================ -->

    <!-- Premium Typography Styles -->
    <style name="AppTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="AppTextStyle.Headline">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="AppTextStyle.Title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="AppTextStyle.Subtitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="AppTextStyle.Body">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="AppTextStyle.Caption">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary_light</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Professional Button Styles -->
    <style name="AppButtonStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppButtonStyle.Primary">
        <item name="android:background">@drawable/button_primary_modern</item>
        <item name="android:textColor">@color/absolute_white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppButtonStyle.Secondary">
        <item name="android:background">@drawable/button_secondary_modern</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppButtonStyle.Outline">
        <item name="android:background">@drawable/button_secondary_modern</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Modern Card Styles -->
    <style name="AppCardStyle">
        <item name="android:background">@drawable/card_modern</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppCardStyle.Elevated">
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">24dp</item>
    </style>

    <!-- Professional Input Styles -->
    <style name="AppEditTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        <item name="android:background">@drawable/input_modern</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Modern Logo Styles -->
    <style name="AppLogoStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/circle_widget</item>
    </style>

    <!-- Professional Header Styles -->
    <style name="AppHeaderStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Modern Splash Screen Styles -->
    <style name="SplashLogoStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="android:background">@drawable/circle_widget</item>
        <item name="android:elevation">12dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="SplashTitleStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/absolute_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:shadowColor">@color/absolute_black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="SplashSubtitleStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/absolute_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Professional Progress Bar Styles -->
    <style name="AppProgressBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:progressDrawable">@drawable/modern_progress_bar</item>
        <item name="android:indeterminate">false</item>
    </style>

    <!-- Modern Navigation Styles -->
    <style name="AppNavigationStyle">
        <item name="android:background">@color/nav_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Professional Container Styles -->
    <style name="AppContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/container_background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppContainerStyle.Section">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Modern Icon Styles -->
    <style name="AppIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/text_secondary_light</item>
    </style>

    <style name="AppIconStyle.Large">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AppIconStyle.Primary">
        <item name="android:tint">@color/primary</item>
    </style>

    <!-- Professional Chip Styles -->
    <style name="AppChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/chip_background_selector</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/chip_text_light</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Modern Divider Styles -->
    <style name="AppDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_light</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="AppDividerStyle.Section">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- Professional Status Styles -->
    <style name="AppStatusStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="AppStatusStyle.Success">
        <item name="android:background">@color/success_light</item>
        <item name="android:textColor">@color/success</item>
    </style>

    <style name="AppStatusStyle.Warning">
        <item name="android:background">@color/warning_light</item>
        <item name="android:textColor">@color/warning</item>
    </style>

    <style name="AppStatusStyle.Error">
        <item name="android:background">@color/error_light</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <!-- Modern Section Header Styles -->
    <style name="AppSectionHeaderStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Professional Shadow Styles -->
    <style name="AppShadowStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:outlineProvider">bounds</item>
    </style>

    <style name="AppShadowStyle.Large">
        <item name="android:elevation">8dp</item>
    </style>

    <style name="AppShadowStyle.Extra">
        <item name="android:elevation">12dp</item>
    </style>

</resources>
