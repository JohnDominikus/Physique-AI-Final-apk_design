<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Professional Base Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#E53E3E"
                android:centerColor="#FF6B6B"
                android:endColor="#F8FAFC"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Premium Overlay Pattern -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.3"
                android:centerY="0.7" />
        </shape>
    </item>
    
    <!-- Professional Accent Overlay -->
    <item android:bottom="100dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#15E53E3E"
                android:endColor="#00E53E3E"
                android:type="radial"
                android:gradientRadius="400dp" />
        </shape>
    </item>
    
    <!-- Modern Subtle Pattern -->
    <item android:top="200dp" android:right="100dp">
        <shape android:shape="oval">
            <solid android:color="#08FFFFFF" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>
    
    <!-- Professional Light Accent -->
    <item android:bottom="300dp" android:left="50dp">
        <shape android:shape="oval">
            <solid android:color="#12FF6B6B" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>
    
</layer-list> 