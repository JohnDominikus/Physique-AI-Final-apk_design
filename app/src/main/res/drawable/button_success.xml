<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#229954"
                android:endColor="#1E8449"
                android:angle="135" />
            <stroke
                android:width="2dp"
                android:color="#196F3D" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#58D68D"
                android:endColor="#27AE60"
                android:angle="135" />
            <stroke
                android:width="2dp"
                android:color="#229954" />
        </shape>
    </item>

    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#27AE60"
                android:endColor="#229954"
                android:angle="135" />
            <stroke
                android:width="1dp"
                android:color="#1E8449" />
        </shape>
    </item>

</selector>