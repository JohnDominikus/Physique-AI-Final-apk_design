<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Professional Card Shadow -->
    <item android:top="2dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_light" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Card Background -->
    <item android:bottom="2dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/absolute_white"
                android:centerColor="@color/surface_light"
                android:endColor="@color/background_light"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/border_light" />
        </shape>
    </item>
    
    <!-- Professional Highlight -->
    <item android:bottom="2dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/overlay_light"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Modern Subtle Accent -->
    <item android:bottom="2dp" android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="0.5dp" 
                android:color="@color/overlay_light" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
</layer-list> 