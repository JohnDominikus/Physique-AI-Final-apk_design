<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#2980B9"
                android:endColor="#1F618D"
                android:angle="135" />
            <stroke
                android:width="2dp"
                android:color="#1B4F72" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#5DADE2"
                android:endColor="#3498DB"
                android:angle="135" />
            <stroke
                android:width="2dp"
                android:color="#2980B9" />
        </shape>
    </item>

    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#3498DB"
                android:endColor="#2980B9"
                android:angle="135" />
            <stroke
                android:width="1dp"
                android:color="#1F618D" />
        </shape>
    </item>

</selector>