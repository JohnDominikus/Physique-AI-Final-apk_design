<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/likedRecipeImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:contentDescription="Recipe Image"
        android:layout_marginEnd="16dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/likedRecipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/likedRecipeDietaryTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dietary Tag"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/likedMealType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meal Type"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/viewRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW RECIPE"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/removeRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="Remove"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

</LinearLayout>