<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true"
    tools:context=".MedicalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:paddingHorizontal="32dp"
            android:paddingVertical="14dp"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Information"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Conditions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condition:"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter condition"
            android:inputType="text" />

        <!-- Medication -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication:"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editMedication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter medication"
            android:inputType="text" />

        <!-- Allergies -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allergies:"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter allergies"
            android:inputType="text" />

        <!-- Medical History -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical History:"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editMedicalHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter medical history"
            android:inputType="text" />

        <!-- Fractures -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fractures:"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editFractures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter fractures"
            android:inputType="text" />

        <!-- Other Conditions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Conditions:"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editOtherConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter other conditions"
            android:inputType="text" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:paddingHorizontal="32dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
