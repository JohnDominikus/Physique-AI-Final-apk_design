<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".MedicalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:baselineAligned="false">

        <!-- Back Icon aligned to top-left -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/back"
            app:tint="@android:color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Centered Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gym Medical Information"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center" />

        <!-- Condition Label and Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condition"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium" />

        <Spinner
            android:id="@+id/spinnerCondition"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown"
            android:textColor="@android:color/black" />

        <!-- Medication Label and Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium" />

        <Spinner
            android:id="@+id/spinnerMedication"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown" />

        <!-- Allergies Section with Info Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerAllergies"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown" />

        <!-- Fractures Section with Info Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fractures"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            >
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerFractures"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown" />

        <!-- Other Conditions Section with Info Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Conditions"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerOtherConditions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:padding="14dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>