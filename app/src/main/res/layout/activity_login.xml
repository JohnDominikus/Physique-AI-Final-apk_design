<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".utils.LoginActivity">

    <!-- Back Button at the top-left corner -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Back Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:tint="@android:color/black" />

    <!-- ScrollView for the rest of the content -->
    <ScrollView
        android:layout_below="@id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <!-- Logo -->

            <!-- App Name -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="App Logo"
                android:src="@drawable/physiqueailogo" />

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physique Ai"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1C1F2A"
                android:layout_marginBottom="20dp" />

            <!-- Sign In Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#FFFFFF">

                <TextView
                    android:id="@+id/tvSignInTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <!-- Username -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#DDDDDD"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/users"
                        android:contentDescription="Username Icon"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="#2C3E50"
                        android:textColorHint="#BDC3C7" />
                </LinearLayout>

                <!-- Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#DDDDDD"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    tools:ignore="ExtraText">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/key"
                        android:contentDescription="Password Icon"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="#2C3E50"
                        android:textColorHint="#BDC3C7" />

                    <!-- Toggle Button for Password Visibility -->
                    <ImageView
                        android:id="@+id/passwordToggle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:contentDescription="Password Visibility Toggle"
                        android:focusable="true"
                        android:src="@drawable/ic_eye"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <!-- Remember Me & Forgot Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:weightSum="2">

                    <CheckBox
                        android:id="@+id/cbRememberMe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Remember me"
                        android:layout_weight="1"
                        android:textColor="#2C3E50" />

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end"
                        android:minHeight="48dp"
                        android:text="Forgot password?"
                        android:textColor="#2980B9"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Login Button -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="LOGIN"
                    android:backgroundTint="#2980B9"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDC3C7"
                android:layout_marginVertical="16dp" />

            <!-- Google Sign Up Button -->
            <Button
                android:id="@+id/btnGoogleSignUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="GOOGLE SIGN UP"
                android:drawableStart="@drawable/login"
                android:backgroundTint="#FF6347"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:drawablePadding="8dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
