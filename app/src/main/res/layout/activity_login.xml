<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:fillViewport="true"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/button_icon_size"
            android:layout_height="@dimen/button_icon_size"
            android:layout_margin="@dimen/spacing_sm"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?attr/textColorPrimary" />

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:layout_marginStart="@dimen/spacing_lg"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardCornerRadius="@dimen/card_corner_radius_large"
            app:cardElevation="@dimen/card_elevation_medium"
            app:strokeColor="@color/theme_primary_light"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/surface_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xxxl">

                <!-- Logo Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xl"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="@dimen/card_elevation_medium"
                        app:cardBackgroundColor="@color/theme_primary">

                        <ImageView
                            android:id="@+id/ivLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/spacing_xl"
                            android:src="@drawable/physiqueailogo"
                            android:contentDescription="Logo"
                            android:scaleType="fitCenter" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textSize="@dimen/text_headline_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in to continue your fitness journey"
                        android:textSize="@dimen/text_body_large"
                        android:textColor="?attr/textColorSecondary"
                        android:gravity="center"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Login Form -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:hint="Email Address"
                        app:boxStrokeColor="@color/theme_secondary"
                        app:hintTextColor="?attr/textColorSecondary"
                        app:boxBackgroundMode="outline"
                        app:startIconDrawable="@drawable/ic_email">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/textColorPrimary"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:hint="Password"
                        app:boxStrokeColor="@color/theme_secondary"
                        app:hintTextColor="?attr/textColorSecondary"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/key">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/textColorPrimary"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Remember Me & Forgot Password -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_xl">

                        <CheckBox
                            android:id="@+id/cbRememberMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remember me"
                            android:textColor="?attr/textColorSecondary"
                            android:textSize="@dimen/text_body_medium" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvForgotPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forgot Password?"
                            android:textSize="@dimen/text_body_medium"
                            android:textColor="@color/theme_accent"
                            android:textStyle="bold"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="@dimen/spacing_sm" />
                    </LinearLayout>

                    <!-- Sign In Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:text="Sign In"
                        android:textSize="@dimen/text_body_large"
                        android:textStyle="bold"
                        android:backgroundTint="@color/theme_primary"
                        app:elevation="8dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/login"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/spacing_sm" />

                    <!-- Register Link -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_xl">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have an account? "
                            android:textSize="@dimen/text_body_medium"
                            android:textColor="?attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/tvRegister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign Up"
                            android:textSize="@dimen/text_body_medium"
                            android:textColor="@color/theme_secondary"
                            android:textStyle="bold"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="@dimen/spacing_sm" />
                    </LinearLayout>

                    <!-- Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="?attr/textColorSecondary"
                            android:alpha="0.3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  OR  "
                            android:textSize="@dimen/text_body_small"
                            android:textColor="?attr/textColorSecondary"
                            android:alpha="0.6" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="?attr/textColorSecondary"
                            android:alpha="0.3" />
                    </LinearLayout>

                    <!-- Google Sign In Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGoogleSignIn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:text="Continue with Google"
                        android:textSize="@dimen/text_body_large"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:backgroundTint="?attr/surfaceColorVariant"
                        app:elevation="4dp"
                        app:cornerRadius="16dp"
                        app:strokeColor="?attr/textColorSecondary"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/google"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/spacing_sm" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
