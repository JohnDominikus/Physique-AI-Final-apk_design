<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">

    <!-- Search bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for exercises"
        android:iconifiedByDefault="false"
        android:layout_marginBottom="16dp" />

    <!-- ChipGroup for selecting workout types -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:checkableBehavior="single">

        <!-- Chip for all workout types -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checked="true"/>

        <!-- Chip for Strength workout type -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strength" />

        <!-- Chip for Cardio workout type -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipCardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardio" />

        <!-- Chip for Yoga workout type -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipYoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga" />
    </com.google.android.material.chip.ChipGroup>

    <!-- TextView to show the number of exercises in the cart -->
    <TextView
        android:id="@+id/tvCartStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercises in Cart: 0"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView to display the list of exercises -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerExercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="vertical" />

    <!-- Button to add new exercise -->
    <Button
        android:id="@+id/btnAddExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add Exercise"
        android:layout_marginTop="16dp" />
</LinearLayout>
