<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modern_landing_background"
    tools:context=".LandingActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="32dp"
            android:paddingVertical="56dp">

            <!-- Logo Card Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="24dp"
                app:cardBackgroundColor="@color/absolute_white">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/physiqueailogo"
                    android:scaleType="centerInside" />

            </androidx.cardview.widget.CardView>

            <!-- Welcome Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textColor="#E0FFFFFF"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtAppDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHYSIQUE AI"
                android:textColor="@color/absolute_white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your AI Fitness Companion"
                android:textColor="#C0FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="48dp"
                android:gravity="center" />

            <!-- Action Buttons Section -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewSignIn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="20dp"
                android:text="Sign In"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0.02"
                app:backgroundTint="@color/absolute_white"
                app:cornerRadius="32dp"
                app:elevation="12dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"
                app:icon="@drawable/person"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/txtSignUp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="32dp"
                android:text="Create Account"
                android:textColor="@color/absolute_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0.02"
                app:backgroundTint="@color/transparent"
                app:strokeColor="@color/absolute_white"
                app:strokeWidth="3dp"
                app:cornerRadius="32dp"
                app:icon="@drawable/add"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/absolute_white"
                android:onClick="onCreateAccountClicked" />

            <!-- Divider Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#60FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or continue with"
                    android:textColor="#B0FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="20dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#60FFFFFF" />

            </LinearLayout>

            <!-- Google Sign In Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="32dp"
                android:text="Continue with Google"
                android:textColor="@color/text_primary_light"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0.02"
                app:backgroundTint="@color/absolute_white"
                app:cornerRadius="32dp"
                app:elevation="12dp"
                app:icon="@drawable/google"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@null" />

            <!-- Feature Preview Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/excercise"
                        android:layout_marginBottom="8dp"
                        app:tint="#C0FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Workouts"
                        android:textColor="#C0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dietary"
                        android:layout_marginBottom="8dp"
                        app:tint="#C0FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrition"
                        android:textColor="#C0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/pose"
                        android:layout_marginBottom="8dp"
                        app:tint="#C0FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pose AI"
                        android:textColor="#C0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 