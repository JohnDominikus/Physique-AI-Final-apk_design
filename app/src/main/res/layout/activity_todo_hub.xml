<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".TodoHubActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/fitness_dashboard_background"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:background="@drawable/circle_background"
            android:contentDescription="Back"
            app:tint="@color/absolute_white"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Todo Planner"
            android:textColor="@color/absolute_white"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/task"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            app:tint="@color/absolute_white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Welcome Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan Your Day"
                android:textColor="@color/text_primary_light"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select todo type to plan and track your activities"
                android:textColor="@color/theme_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="32dp" />

            <!-- Workout Todo Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWorkoutTodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="24dp">

                    <!-- Icon Container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/theme_primary">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/excercise"
                            app:tint="@color/absolute_white" />
                    </androidx.cardview.widget.CardView>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workout"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary_light"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan your daily workouts and exercises"
                            android:textSize="14sp"
                            android:textColor="@color/theme_secondary"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>

                    <!-- Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/theme_primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dietary Todo Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDietaryTodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="24dp">

                    <!-- Icon Container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/theme_secondary">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/dietary"
                            app:tint="@color/absolute_white" />
                    </androidx.cardview.widget.CardView>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dietary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary_light"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan your meals and nutrition intake"
                            android:textSize="14sp"
                            android:textColor="@color/theme_secondary"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>

                    <!-- Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/theme_secondary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Outdoor Activity Card -->

            <!-- Additional Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:background="@drawable/card_modern"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/verified"
                    app:tint="@color/theme_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay Organized"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan your activities, set goals, and track your progress to achieve your fitness objectives efficiently."
                    android:textSize="14sp"
                    android:textColor="@color/theme_secondary"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_light"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>