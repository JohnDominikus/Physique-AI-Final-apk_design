<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Calculator"
        android:textColor="#1C1F2A"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Gender Buttons -->
    <LinearLayout
        android:id="@+id/genderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/maleButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Male"
            android:textColor="@drawable/gender_text_selector"
            android:drawableTop="@drawable/ic_male"
            android:background="@drawable/gender_button_unselected"
            android:textStyle="bold" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/femaleButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Female"
            android:textColor="@drawable/gender_text_selector"
            android:drawableTop="@drawable/ic_female"
            android:background="@drawable/gender_button_selected"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Input Fields -->
    <LinearLayout
        android:id="@+id/inputFields"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/genderLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:text="Height (cm)"
                android:textColor="#1C1F2A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/heightSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="250"
                android:progress="170"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/seekbar_progress"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/heightValue"
                android:text="Height: 170 cm"
                android:textColor="#1C1F2A"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:text="Weight (kg)"
                android:textColor="#1C1F2A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/input_box"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/weightMinus"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/minus"
                    android:background="@android:color/white"
                    android:contentDescription="Decrease weight" />

                <EditText
                    android:id="@+id/weightInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="50"
                    android:textColor="#1C1F2A"
                    android:textSize="18sp"
                    android:background="@android:color/white" />

                <ImageButton
                    android:id="@+id/weightPlus"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"
                    android:background="@android:color/white"
                    android:contentDescription="Increase weight" />
            </LinearLayout>
        </LinearLayout>

        <!-- Age -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:text="Age"
                android:textColor="#1C1F2A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/input_box"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/ageMinus"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/minus"
                    android:background="@android:color/white"
                    android:contentDescription="Decrease age" />

                <EditText
                    android:id="@+id/ageInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="25"
                    android:textColor="#1C1F2A"
                    android:textSize="18sp"
                    android:background="@android:color/white" />

                <ImageButton
                    android:id="@+id/agePlus"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"
                    android:background="@android:color/white"
                    android:contentDescription="Increase age" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Calculate Button -->
    <Button
        android:id="@+id/calculateButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Calculate your BMI!"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/button_gradient"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/inputFields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
