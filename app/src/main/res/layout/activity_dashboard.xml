<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".DashboardActivity">

    <!-- Profile Section -->
    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            android:contentDescription="@string/profile_image_description"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="12dp" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPhysicalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: 75kg"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Physical Level with Dynamic Color and Icons -->
            <LinearLayout
                android:id="@+id/llPhysicalLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Star Icon for Beginner -->
                <ImageView
                    android:id="@+id/ivStar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    android:contentDescription="Star Icon"
                    android:visibility="gone" />

                <!-- Verified Icon for Intermediate -->
                <ImageView
                    android:id="@+id/ivVerified"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/verified"
                    android:contentDescription="Verified Icon"
                    android:visibility="gone" />

                <!-- Muscles Icon for Advanced -->
                <ImageView
                    android:id="@+id/ivMuscles"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/verified"
                    android:contentDescription="Muscles Icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvPhysicalLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level: Beginner"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Settings Icon -->
        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:contentDescription="Settings"
            android:focusable="true"
            android:src="@drawable/settings"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome! Let's start your fitness journey!"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/llProfile"
        android:layout_marginBottom="24dp" />

    <!-- Grid Layout with Widgets -->
    <GridLayout
        android:id="@+id/gridWidgets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcome"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="3"> <!-- Updated rowCount to accommodate the new BMI frame -->

        <!-- AI Posture -->
        <FrameLayout
            android:id="@+id/btnPosture"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:layout_columnWeight="1"
            android:background="@color/blue"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/pose"
                android:contentDescription="AI Posture" />
        </FrameLayout>

        <!-- Exercise -->
        <FrameLayout
            android:id="@+id/btnExercise"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:layout_columnWeight="1"
            android:background="@color/ash_grey"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/excercise"
                android:contentDescription="Exercise" />
        </FrameLayout>

        <!-- Dietary -->
        <FrameLayout
            android:id="@+id/btnDietary"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:layout_columnWeight="1"
            android:background="@color/green"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/dietary"
                android:contentDescription="Dietary" />
        </FrameLayout>

        <!-- Task -->
        <FrameLayout
            android:id="@+id/btnTask"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:layout_columnWeight="1"
            android:background="@color/violet"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/task"
                android:contentDescription="Task" />
        </FrameLayout>

        <!-- BMI Section (New FrameLayout) -->
        <FrameLayout
            android:id="@+id/btnBMI"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:layout_columnWeight="1"
            android:background="@color/purple"
            android:clickable="true"
           android:focusable="true"
           android:elevation="4dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/bmi"
            android:contentDescription="BMI"
            app:tint="@color/white" />
    </FrameLayout>

        <!-- Logout Button -->
        <FrameLayout
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:layout_columnWeight="1"
            android:background="@color/red"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/logout"
                android:contentDescription="Logout" />
        </FrameLayout>

    </GridLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
