<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DashboardActivity">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Dashboard Title -->
            <TextView
                android:id="@+id/tvDashboardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Profile Section -->
            <LinearLayout
                android:id="@+id/llProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/profile"
                    android:contentDescription="@string/profile_image_description"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBmiStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI: 24.0"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:id="@+id/llPhysicalLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/ivStar"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/star"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivVerified"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/verified"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivMuscles"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/verified"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvPhysicalLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level: Beginner"
                            android:textSize="14sp"
                            android:textColor="@color/green"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Settings"
                    android:src="@drawable/settings" />
            </LinearLayout>

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome! Let's start your fitness journey!"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="24dp" />

            <!-- To-Do List Box -->
            <LinearLayout
                android:id="@+id/llTodoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_gray"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvTodoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To-Do List"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTodoContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Buy groceries\n2. Finish workout plan\n3. Check email"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- GridLayout for Widgets -->
            <GridLayout
                android:id="@+id/gridWidgets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginBottom="16dp">

                <!-- Repeat MaterialCards for each widget -->
                <!-- Posture Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnPosture"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@color/blue"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pose"
                        app:tint="@color/white"
                        android:contentDescription="AI Posture" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Exercise -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnExercise"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/excercise"
                        app:tint="@color/white"
                        android:contentDescription="Exercise" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Dietary -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnDietary"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@color/green"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dietary"
                        app:tint="@color/white"
                        android:contentDescription="Dietary" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Task -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnTask"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@color/orange"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/task"
                        app:tint="@color/white"
                        android:contentDescription="Task" />
                </com.google.android.material.card.MaterialCardView>

                <!-- BMI -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnBMI"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@color/violet"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bmi"
                        app:tint="@color/white"
                        android:contentDescription="BMI" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Logout -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnLogout"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logout"
                        app:tint="@color/white"
                        android:contentDescription="Logout" />
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_navigation_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
