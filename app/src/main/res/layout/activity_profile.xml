<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ProfileActivity">

    <!-- Top App Bar Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTopBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lg"
        app:cardCornerRadius="@dimen/card_corner_radius_medium"
        app:cardElevation="@dimen/card_elevation_low"
        app:cardBackgroundColor="@color/surface_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_lg">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back"
                android:contentDescription="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/black" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/text_title_large"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/btnEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ScrollView for Profile Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_xxl"
        app:layout_constraintTop_toBottomOf="@id/cardTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Profile Image Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_xxl">

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="65dp"
                    app:cardElevation="@dimen/card_elevation_medium"
                    app:strokeColor="@color/theme_primary"
                    app:strokeWidth="3dp"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <ImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile Picture" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_medium"
                    android:text="Change Photo"
                    android:textSize="@dimen/text_body_medium"
                    android:textStyle="bold"
                    android:textColor="@color/theme_secondary"
                    android:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/theme_secondary"
                    app:strokeWidth="2dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/camera"
                    app:iconTint="@color/theme_secondary"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/spacing_sm"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>

            <!-- Profile Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:hint="Full Name"
                    app:boxStrokeColor="@color/theme_secondary"
                    app:hintTextColor="?attr/textColorSecondary"
                    app:startIconDrawable="@drawable/ic_user">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:hint="Email Address"
                    app:boxStrokeColor="@color/theme_secondary"
                    app:hintTextColor="?attr/textColorSecondary"
                    app:startIconDrawable="@drawable/ic_email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:hint="Phone Number"
                    app:boxStrokeColor="@color/theme_secondary"
                    app:hintTextColor="?attr/textColorSecondary"
                    app:startIconDrawable="@drawable/phone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Birthdate -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xl"
                    android:hint="Birthdate"
                    app:boxStrokeColor="@color/theme_secondary"
                    app:hintTextColor="?attr/textColorSecondary"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBirthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:id="@+id/layoutActionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!-- Save Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:text="Save Changes"
                        android:textSize="@dimen/text_body_large"
                        android:textStyle="bold"
                        android:backgroundTint="@color/theme_primary"
                        app:elevation="6dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_save"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/spacing_sm" />

                    <!-- Cancel Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Cancel"
                        android:textColor="@color/theme_secondary"
                        android:textSize="@dimen/text_body_large"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="@color/theme_secondary"
                        app:strokeWidth="2dp"
                        app:icon="@drawable/close"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/spacing_sm" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
