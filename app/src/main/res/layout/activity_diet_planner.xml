<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Search bar with better styling -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for meals"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_view_background"
        android:layout_marginBottom="16dp" />

    <!-- ChipGroup with better spacing and wrapping -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupMealType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:singleLine="true"
        app:chipSpacing="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checked="true"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/green" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/green" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/green" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/green" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snack"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/green" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Nutrition summary with better styling -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/nutrition_summary_background"
        android:padding="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNutritionSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meals: 0 | Calories: 0 | Protein: 0g"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dietary"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- RecyclerView with better margins -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMeals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Add meal button with Material style -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddMeal"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Meal"
        android:textAllCaps="false"
        app:icon="@drawable/add"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/colorPrimary" />
</LinearLayout>