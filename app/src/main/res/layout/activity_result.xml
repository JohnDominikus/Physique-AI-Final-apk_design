<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BMI Result Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?android:windowBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/bmiTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_bmi"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/bmiValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.2"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/bmiTitleText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/bmiFormulaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI = 22.96 kg/mÂ²"
                    android:textSize="16sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/bmiValueText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/colorOutline"
                    app:layout_constraintTop_toBottomOf="@id/bmiFormulaText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/bmiRangeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_bmi_range"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/weightRangeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="12.8 kg ~ 17.4 kg"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bmiRangeText" />

                <ImageView
                    android:id="@+id/bmiStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="24dp"
                    android:contentDescription="@string/bmi_status"
                    app:srcCompat="@drawable/ic_check_circle"
                    app:layout_constraintTop_toBottomOf="@id/weightRangeText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:tint="@color/green" />

                <TextView
                    android:id="@+id/bmiStatusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/bmi_status_normal"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/bmiStatusIcon"
                    app:layout_constraintTop_toTopOf="@id/bmiStatusIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- BMI Categories Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/categoriesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?android:windowBackground"
            app:layout_constraintTop_toBottomOf="@id/resultCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/categoriesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bmi_categories"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Underweight -->
                <TextView
                    android:id="@+id/underweightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/underweight"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/categoriesTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/underweightValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/underweight_value"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/underweightText"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Normal -->
                <TextView
                    android:id="@+id/normalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/underweightText"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/normalValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_value"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/normalText"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Overweight -->
                <TextView
                    android:id="@+id/overweightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overweight"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/normalText"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/overweightValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overweight_value"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/overweightText"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Obese -->
                <TextView
                    android:id="@+id/obeseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obese"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/overweightText"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/obeseValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obese_value"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/obeseText"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/categoriesCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBmiButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_bmi"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="@color/green"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backToBmiCalculatorButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back_to_calculator"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:strokeColor="@color/red"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>