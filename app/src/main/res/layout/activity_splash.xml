<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modern_splash_background"
    tools:context=".SplashActivity">

    <!-- Animated Background Overlay -->
    <View
        android:id="@+id/animatedOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@drawable/gym_gradient_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Brand Container -->
        <LinearLayout
            android:id="@+id/brandContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/loadingContainer">

            <!-- Modern Logo with Card Background -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoCard"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="24dp"
                app:cardBackgroundColor="@color/absolute_white">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@drawable/physiqueailogo"
                    android:scaleType="centerInside"
                    android:contentDescription="Physique AI Logo" />

            </androidx.cardview.widget.CardView>

            <!-- App Title with Modern Typography -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHYSIQUE AI"
                android:textColor="@color/absolute_white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/appSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your AI Fitness Companion"
                android:textColor="#E0FFFFFF"
                android:textSize="16sp"
                android:textStyle="normal"
                android:letterSpacing="0.05"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Loading Container -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Loading Text -->
            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:textColor="@color/absolute_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="16dp"
                android:alpha="0.9" />

            <!-- Modern Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="8dp"
                android:max="100"
                android:progress="0"
                android:indeterminate="false"
                android:progressDrawable="@drawable/modern_progress_bar"
                android:layout_marginBottom="12dp" />

            <!-- Progress Percentage -->
            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#C0FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Animated Floating Elements -->
    <View
        android:id="@+id/floatingElement1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/circle_background"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/floatingElement2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/circle_background"
        android:alpha="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Version Info -->
    <TextView
        android:id="@+id/versionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0 â€¢ Beta"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:letterSpacing="0.05"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
