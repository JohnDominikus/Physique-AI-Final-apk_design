<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp"
    tools:context=".PhysicalActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:baselineAligned="false">

        <!-- Back Icon -->
        <ImageButton
            android:id="@+id/btnBackToNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/back"
            app:tint="@android:color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical Classification"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center" />

        <!-- Simple Spinner - Body Level -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body Level:"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <Spinner
            android:id="@+id/spinnerBodyLevel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:textColor="@color/black"
            android:spinnerMode="dropdown" />

        <!-- Enhanced Spinner - Body Classification -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body Classification:"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />


        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerBodyClassification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown" />

        <!-- Enhanced Spinner - Exercise Routine -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Routine:"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />


        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerExercise"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown" />



        <!-- Enhanced Spinner - Gym Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym Mode:"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />

            >
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerGymMode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="4dp"
            android:spinnerMode="dropdown" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Next â†’"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:padding="14dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>