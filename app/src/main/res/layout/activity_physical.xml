<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true"
    tools:context=".PhysicalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
        android:padding="14dp"
            android:backgroundTint="#4CAF50"
        android:text="← Back"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:elevation="4dp"
        android:layout_gravity="center"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physical Classification"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"/>

        <!-- Body Level Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body Level:"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"/>

        <Spinner
            android:id="@+id/spinnerBodyLevel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="2dp"/>

        <!-- Body Classification Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body Classification:"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"/>

        <Spinner
            android:id="@+id/spinnerBodyClassification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="2dp"/>

        <!-- Exercise Routine Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Routine:"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"/>

        <Spinner
            android:id="@+id/spinnerExercise"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="2dp"/>

        <!-- Other Gym Info Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Gym Info:"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"/>

        <Spinner
            android:id="@+id/spinnerOthers"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="2dp"/>

        <!-- Gym Mode Spinner (Updated label) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gym Mode:"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"/>

        <Spinner
            android:id="@+id/spinnerGymMode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="40dp"
            android:background="@drawable/custom_spinner_background"
            android:elevation="2dp"/>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next →"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>
